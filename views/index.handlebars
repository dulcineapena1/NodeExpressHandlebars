<h1>Burger</h1>

<h2>No devoradas</h2>

<ul>
  {{#each burgers}}

    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}

  {{/each}}
</ul>

<h2>Devoradas</h2>

<ul>
  {{#each burgers}}

    {{#if devoured}}
      {{burger_name}}
    {{/if}}

  {{/each}}
</ul>




<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger name:</label>
    <input type="text" id="ca" name="name">
  </div>

  
  <button type="submit">Add the burger</button>
</form>
